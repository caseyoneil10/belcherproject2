<!DOCTYPE html>
<html lang="en" dir="ltr">
<%- include ('../partials/head.ejs') %>

<body>
  <%- include ('../partials/loginheader.ejs') %>
  <div class="container loginLanding">
    <h3 class="loginText">Easy, simple, tracking of all of your favorite movies. </h3>
    <div class="loginPage">
      <h4 id="create">Create an Account</h4>
      <form action="/users/" method="POST">
        <input type="text" name="firstName" placeholder="First Name" required>
        <input type="text" name="username" placeholder="Username" minlength="5" required>
        <input type="password" name="password" placeholder="Password" minlength="6" required> <br>
        <input class="button-primary" type="submit" value="Submit"></input>
      </form>
      <form class="bottomButton" action="/sessions/new" method="GET">
        <input class="button-primary" type="submit" value="Existing User"></input>
      </form>
    </div>
  </div>
</body>

</html>
