<!DOCTYPE html>
<html lang="en" dir="ltr">
<%- include ('./partials/head.ejs') %>

  <body>
    <div class="container">

  <h1><%=movie.title%></h1>
  <h1><%=movie.director%></h1>
  <img src="<%=movie.image%>" width='250px' height='350px' alt="<%=movie.title%>"><br><br>
  <p><%=movie.synopsis%></p>
  <%=movie.genre%><br>

  <h2>Reviews</h2>
  <%=movie.review%><br><br>
  <form action="/movies/edit/<%=movie.id%>">
    <button type="submit">ADD REVIEW</button>
  </form>
  <form action="/movies/<%=movie.id%>?_method=DELETE" method="POST">
    <button type="submit">Delete Entry</button>
  </form>
  <form action="/movies">
    <button type="submit">BACK</button>
  </form>
</div>
  </body>
</html>
